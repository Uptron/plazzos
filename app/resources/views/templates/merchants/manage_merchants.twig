{% extends 'main.twig' %}
{% block body %}

    {% include 'merchants/edit_merchant.twig' %}
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Merchant Accounts</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <table id='datatable' class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Merchant Name</th>
                            <th>Phone Number</th>
                            <th>Email Address</th>
                            <th>Physical Address</th>
                            <th>Wallet Balance</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for merchant in merchants %}

                            <tr class="open-{{ merchant.id }}">
                                <td>{{ merchant.merchantName }}</td>
                                <td>{{ merchant.phoneNumber }}</td>
                                <td>{{ merchant.email }}</td>
                                <td>{{ merchant.address }}</td>
                                <td></td>
                                <td>{{ merchant.accountStatus }}</td>
                                <td>
                                    <a href="javascript:edit_merchant_account('{{ merchant.merchantName }}', '{{ merchant.phoneNumber }}', '{{ merchant.email }}', '{{ merchant.address }}', '{{ merchant.accountStatus }}','{{ merchant.id }}')">
                                        <i class="fa fa-edit"></i></a>
                                </td>
                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}{% endblock %}
