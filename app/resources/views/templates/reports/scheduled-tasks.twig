{% extends 'base.twig' %}
{% block body %}


    <style>
        .nav_menu,.nav-md .container.body .col-md-3.left_col{
            display:none;
        }
        .nav-md .container.body .right_col{
            margin-left:10px;
        }
    </style>
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Scheduled Tasks</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <table id='datatable' class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>Contractor</th>
                            <th>Team</th>
                            <th>Uid</th>
                            <th>Username</th>
                            <th>Network</th>
                            <th>Sub Network</th>
                           <th>Task Type</th>
                            <th>Scheduled Time</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Status</th>

                        </tr>
                        </thead>
                        <tbody>

                        {% for task in tasks %}

                            <tr>
                                <td>{{ task.contractor }}</td>
                                <td>{{ task.team }}</td>
                                <td>{{ task.customerUid }}</td>
                                <td>{{ task.userName }}</td>
                                <td>{{ task.network }}</td>
                                <td>{{ task.subNetwork }}</td>
                                <td>{{ task.taskType }}</td>
                                <td>{{ task.taskDate|date('Y-m-d') }}</td>
                                <td>{{ task.startTime  }}</td>
                                <td>{{ task.endTime  }}</td>
                                <td>{{ task.status }}</td>

                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}{% endblock %}
