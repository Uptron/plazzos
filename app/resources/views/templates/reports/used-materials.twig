{% extends 'base.twig' %}
{% block body %}
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Used Materials</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id='datatable' class='table table-striped table-bordered'>
                        <thead>
                        <tr>
                           <th> Date</th>
                            <th> Customer Name</th>
                            <th>Litebeam</th>
                            <th>CPE</th>
                            <th> Cable Length</th>
                            <th> RJ45'S</th>
                            <th> Poles Used</th>
                            <th> Copping Stones</th>
                            <th> Installation Status</th>
                            <th> Installer Name</th>
                            <th>Comments</th>
                           
                        </tr>
                        </thead>
                        <tbody>
                        {% for material in materials %}

                            <tr>
                             <td>{{ material.date }}</td>
                                <td>{{ material.client_name }}</td>
                                <td>{{ material.litebeam_serial }}</td>
                                <td>{{ material.hap_serial }}</td>
                                <td>{{ material.cable_length }}</td>
                                <td>{{ material.rjs }}</td>
                                <td>{{ material.poles }}</td>
                                <td>{{ material.copping_stone }}</td>
                                <td>{{ material.task_status }}</td>
                                <td>{{ material.user_name }}</td>
                                <td>{{ material.comments }}</td>
                               
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
