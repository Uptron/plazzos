{% extends 'base.twig' %}
{% block body %}
    <style>
        .nav_menu,.nav-md .container.body .col-md-3.left_col{
            display:none;
        }
        .nav-md .container.body .right_col{
            margin-left:10px;
        }
    </style>
    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Installs Report</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id='datatable' class='table table-striped table-bordered'>
                        <thead>
                        <tr>
                           <th> Date</th>
                            <th> Customer Name</th>
                            <th> Installation Status</th>
                            <th> Installer Name</th>
                           
                        </tr>
                        </thead>
                        <tbody>
                        {% for material in materials %}

                            <tr>
                             <td>{{ material.date }}</td>
                                <td>{{ material.client_name }}</td>
                                <td>{{ material.task_status }}</td>
                                <td>{{ material.user_name }}</td>
                               
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
