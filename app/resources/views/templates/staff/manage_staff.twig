{% extends 'main.twig' %}
{% block body %}


    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Staff Accounts</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <table id='datatable' class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Middle Name</th>
                            <th>Last Name</th>
                            <th>Email Address</th>
                            <th>Department</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for staff in staffs %}

                            <tr class="open-{{ staff.id }}">
                                <td>{{ staff.firstName }}</td>
                                <td>{{ staff.middleName }}</td>
                                <td>{{ staff.lastName }}</td>
                                <td>{{ staff.email }}</td>
                                <td>{{ staff.department }}</td>
                                <td></td>
                                <td>{{ staff.status }}</td>
                                <td>
                                    <a href="javascript:edit_staff_account('{{ staff.firstName }}', '{{ staff.middleName }}', '{{staff.lastName }}', '{{  staff.email }}', '{{  staff.group }}','{{ staff.id }}')">
                                        <i class="fa fa-edit"></i></a>
                                </td>
                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
{% block javascripts %}{% endblock %}
